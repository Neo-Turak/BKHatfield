<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E4053"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print Jobs"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Safe_Counting"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text="Safe Counting Sheet"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Waste_sheet"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:text="Waste Counting Sheet"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Daily_Counting"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:text="Daily Counting Sheet"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Holiday_requst"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:text="Holiday request form"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Job_Application"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:text="Job application form"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Cash_responsibility"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:text="Cash responsibility sheet"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:id="@+id/print"
            android:text="Print"
            />
    </LinearLayout>

</LinearLayout>